<% layout("/layouts/boilerplate.ejs") %>

<form
  method="post"
  action="/listings/<%=listIteams._id%>?_method=PUT"
  class="edit-form"
  enctype="multipart/form-data"
>
  <h3>Edit Existing Data!</h3>

  <div class="edit-groups">
    <label for="title">Title</label>
    <input
      type="text" 
      name="listing[title]"
      value="<%=listIteams.title  %>"
      id="title"
    />
  </div>

  <div class="edit-groups">
    <label for="description">Description</label>
    <input
      type="text"
      name="listing[description]"
      value="<%=listIteams.description  %>"
      id="description"
    />
  </div>
  <i>Original Listing Image </i>
  <div class="ms-3">
    <img  style="height: 10rem"   src="<%= listIteams.image.url %>" alt="">
  </div>
  <div class="edit-groups">
    <div class="edit-groups">
      <label for="image" > NewImage </label>
      <input  name="listing[image]" type="file" id="image" >
    </div>
    
  <div class="edit-groups">
    <label for="price">Price</label>
    <input
      type="number"
      name="listing[price]"
      value="<%=listIteams.price  %>"
      id="price"
    />
  </div>

  <!-- Country and Location in the same row -->
  <div class="form-row">
    <div class="edit-groups">
      <label for="country">Country</label>
      <input
        type="text"
        name="listing[country]"
        value="<%=listIteams.country  %>"
        id="country"
      />
    </div>

    <div class="edit-groups">
      <label for="location">Location</label>
      <input
        type="text"
        name="listing[location]"
        value="<%=listIteams.location  %>"
        id="location"
      />
    </div>
  </div>

  <button type="submit">Submit</button>
</form>
