<style>
  #filters {
    display: flex;
    flex-wrap: wrap; /* Allow wrapping */
    justify-content: center;
    gap: 1.5rem;
    padding: 1rem;
  }

  .filter {
    flex: 0 1 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    opacity: 0.7;
    transition: 0.3s ease;
    width: 60px;
    margin-right: 20px;
  }

  .filter:hover {
    opacity: 1;
    transform: translateY(-5px);
    cursor: pointer;
  }

  .filter i {
    font-size: 30px;
    margin-bottom: 6px;
    color: #ff0000;
    transition: font-size 0.3s ease;
  }

  .filter p {
    font-size: 12px;
    font-weight: 500;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
  }

  .carousel-control-prev-icon,
  .carousel-control-next-icon {
    background-image: none;
  }

  .carousel-control-prev::after,
  .carousel-control-next::after {
    content: "";
    display: inline-block;
    width: 10px;
    height: 10px;
    border-top: 3px solid rgb(0, 0, 0);
    border-right: 3px solid rgb(0, 0, 0);
  }

  .carousel-control-prev::after {
    transform: rotate(-135deg);
  }

  .carousel-control-next::after {
    transform: rotate(45deg);
  }

  .carousel-control-prev,
  .carousel-control-next {
    width: 50px;
    height: 50px;
    border: 1px solid rgb(106, 106, 106);
    border-radius: 25px;
    margin-top: 20px;
  }

  /* Responsive Changes */
  @media (max-width: 768px) {
    .filter {
      width: 70px;
    }
    .filter i {
      font-size: 24px;
    }
    .filter p {
      font-size: 11px;
    }
  }

  @media (max-width: 576px) {
    .filter {
      width: 60px;
    }
    .filter i {
      font-size: 20px;
    }
    .filter p {
      font-size: 10px;
    }
  }
  .form-switch {
    border: 1.3px solid rgb(53, 51, 51);
    width: 180px;
    margin-left: 70rem;
    margin-bottom: 10px;
    padding: 10px;
    border-radius: 15px;
    font-weight: 500;
    font-size: 14px;
    background-color: aliceblue;
  }
  #flexSwitchCheckDefault {
    padding: 8px;
  }
  .taxinfo {
    display: none;
  }

  @media (1200px<width<1400px) {
    .form-switch {
      margin-left: 58rem;
    }
  }
  @media (1000px<width<1200px) {
    .form-switch {
      margin-left: 47rem;
    }
  }
  @media (765px<width<1000px) {
    .form-switch {
      margin-left: 32rem;
    }
  }
  @media (450px<width<765px) {
    .form-switch {
      margin-left: 21rem;
    }
  }
</style>

