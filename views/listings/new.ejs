<% layout("/layouts/boilerplate.ejs") %>

<h4 class="head">Create New List</h4>

<form method="post" action="/listings" class="responsive-form">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="listing[title]" placeholder="Enter Title" id="title">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" name="listing[description]" placeholder="Enter Description" id="description">
  </div>

  <div class="form-group">
    <label for="image">Image URL</label>
    <input type="text" name="listing[image]" placeholder="image URL" id="image">
  </div>

  <div class="form-group">
    <label for="price">Price</label>
    <input type="number" name="listing[price]" placeholder="Enter Price" id="price">
  </div>

  <!-- Country and Location in the same row -->
  <div class="form-row">
    <div class="form-group">
      <label for="country">Country</label>
      <input type="text" name="listing[country]" placeholder="Enter Country" id="country">
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input type="text" name="listing[location]" placeholder="Enter Location" id="location">
    </div>
  </div>

  <button type="submit">Submit</button>
</form>
